<table width="736"
    style="font-family:-apple-system,BlinkMacSystemFont,'Segoe UI';border-collapse:collapse;border:solid #003E84 1.0pt;">
    <tbody>
        <tr>
            <td width="736" colspan="4">
                <div style="text-align:center;">
                    <b>
                        <span style="font-size:16px;">
                            APPLICATION STATUS
                        </span>
                    </b>
                </div>
            </td>
        </tr>
        <tr>
            <td width="197" style="padding:5 5 5 5;">
                <div style="text-align:right;">
                    <b>
                        <span style="font-size:16px;">
                            Date of Application:
                        </span>
                    </b>
                </div>
            </td>
            <td style="padding:5 5 5 5;" colspan="3">
                <div style="text-align:left; padding-left: 25px;">
                    <span style="font-size:16px;">
                        <%=submittedOn%>
                    </span>
                </div>
            </td>
        </tr>
        <tr>
            <td width="120" style="padding:5 5 5 5;">
                <div style="text-align:right;">
                    <b>
                        <span style="font-size:16px;">
                            Position Applied:
                        </span>
                    </b>
                </div>
            </td>
            <td width="280" style="padding:5 5 5 5" colspan="3">
                <div style="text-align:left;padding-left: 25px;">
                    <span style="font-size:16px;">
                        <%=position%>
                    </span>
                </div>
            </td>
        </tr>
        <tr>
            <td width="120" style="padding:5 5 5 5;">
                <div style="text-align:right;padding-left: 25px;">
                    <b>
                        <span style="font-size:16px;">
                            Hiring Department:
                        </span>
                    </b>
                </div>
            </td>
            <td width="280" style="padding:5 5 5 5" colspan="3">
                <div style="text-align:left;padding-left: 25px;">
                    <span style="font-size:16px;">
                        <%=projectName%>
                    </span>
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding:10 20 10 20;" colspan="4">
                <div style="font-size:16px;text-align: justify;">
                    <%-notification%>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <div style="font-size:12px;text-align: center;padding-top: 30px; padding-bottom: 25px;">
                    Sent via Bluebox | <a href="<%=portalUrl%>" style="color: green; text-decoration: none;">Learn More</a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<br>
<div><%-emailSignature%></div>
